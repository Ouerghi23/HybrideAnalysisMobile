<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#D32F2F"
        android:layout_marginBottom="24dp"
        android:elevation="4dp"
        android:clipToPadding="false">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hybrid Analysis"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Déconnexion"
            android:textColor="#FFFFFF"
            android:backgroundTint="#B71C1C"
            android:textAllCaps="true"
            android:textSize="12sp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#1E1E1E">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entrez l'élément à analyser:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/et_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="URL, IP, domaine ou hash de fichier..."
                android:minLines="2"
                android:gravity="top"
                android:background="@drawable/edittext_rounded_background"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#BBBBBB"/>

            <Button
                android:id="@+id/btn_upload_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sélectionner un fichier"
                android:visibility="gone"
                android:backgroundTint="#424242"
                android:textColor="#FFFFFF"
                android:textAllCaps="true"
                android:layout_marginTop="12dp"
                android:paddingVertical="12dp"/>

            <EditText
                android:id="@+id/et_file_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Chemin du fichier sélectionné"
                android:enabled="false"
                android:visibility="gone"
                android:background="@drawable/edittext_rounded_background"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#1E1E1E">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type d'analyse:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/rg_analysis_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle"
                android:dividerPadding="8dp">

                <RadioButton
                    android:id="@+id/rb_url"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="URL"
                    android:checked="true"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#D32F2F"/>

                <RadioButton
                    android:id="@+id/rb_ip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="IP"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#D32F2F"/>

                <RadioButton
                    android:id="@+id/rb_domain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Domaine"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#D32F2F"/>

                <RadioButton
                    android:id="@+id/rb_file"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fichier"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#D32F2F"/>

            </RadioGroup>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:elevation="4dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#1E1E1E">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service d'analyse:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/rg_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:divider="?android:attr/dividerHorizontal"
                android:showDividers="middle"
                android:dividerPadding="8dp">

                <RadioButton
                    android:id="@+id/rb_otx"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AlienVault OTX"
                    android:checked="true"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#D32F2F"/>

                <RadioButton
                    android:id="@+id/rb_vt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="VirusTotal"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#D32F2F"/>

            </RadioGroup>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/btn_analyze"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ANALYSER"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAllCaps="true"
            android:backgroundTint="#D32F2F"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"/>

        <Button
            android:id="@+id/btn_chatbot"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="CHATBOT ASSISTANT"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textAllCaps="true"
            android:backgroundTint="#424242"
            android:elevation="2dp"/>
    </LinearLayout>

</LinearLayout>
